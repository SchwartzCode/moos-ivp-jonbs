//PART THAT RISES FOR AIR
Behavior = BHV_Timer
{
  name        = rise_timer
  condition   = UNDER_WATER = true
  duration    = 200
  condition   = DEPLOY = true
  endflag     = UNDER_WATER = false
  endflag     = FRESH_AIR = true
}

//---------------------------------
Behavior = BHV_ConstantDepth
{
  name        = surfacing
  pwt         = 100
  condition   = UNDER_WATER = false
  condition   = FRESH_AIR   = true
  condition   = DEPLOY      = true
  duration    = 60

  
  
            basewidth = 100          // default
                depth = 0           // default
   depth_mismatch_var = DEPTH_DIFF   // example
            peakwidth = 3            // default
          summitdelta = 50           // default
}

